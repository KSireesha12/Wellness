<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7b8b0"
    android:orientation="vertical"
    tools:context=".Disease">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#BA68C8"
        android:gravity="center"
        android:text="Health Status"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="0dp"
                android:gravity="left"
                android:text="Name"
                android:textSize="20dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="0dp"
                android:gravity="center"
                android:text="value"
                android:textSize="20dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:gravity="right"
                android:text="healthcondition"
                android:textSize="20dp"></TextView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="center_horizontal">

        <TextView
            android:paddingLeft="20dp"
            android:text="Oxygen"
            android:paddingRight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_gravity="center"
            android:paddingRight="60dp"
            android:layout_width="wrap_content"
            android:text=">98% "
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/oxygen"
            android:layout_gravity="center"

            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:layout_width="wrap_content"
            android:text="Hypoxemia"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="center_horizontal">

        <TextView
            android:paddingLeft="20dp"
            android:text="pulserate"
            android:paddingRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_gravity="center"
            android:paddingRight="60dp"
            android:layout_width="wrap_content"
            android:text=">125 "
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/pulserate"
            android:layout_gravity="center"

            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:layout_width="wrap_content"
            android:text="Asthama"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="center_horizontal">

        <TextView
            android:paddingLeft="20dp"
            android:text="sugarlevel"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_gravity="center"
            android:paddingRight="30dp"
            android:layout_width="wrap_content"
            android:text=">200mg/dl"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/Sugarlevel"
            android:layout_gravity="center"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:text="Diabetes"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>




</LinearLayout>


